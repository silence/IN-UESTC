.main {
  margin-top: 140rpx;
  padding: 40rpx;
  font-size: 26rpx;
}

.images {
  display: flex;
  flex-wrap: wrap;
}

.image {
  width: 140rpx;
  height: 140rpx;
  position: relative;
  border-radius: 10rpx;
  margin-top: 8rpx;
  margin-right: 8rpx;
}

.image > .clear {
  position: absolute;
  z-index: 100;
  top: -12rpx;
  right: -12rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 100%;
  background: #ddd;
  text-align: center;
  line-height: 30rpx;
}

.image > image {
  width: 100%;
  height: 100%;
}

.add {
  background-color: #efefef;
}

.add > image {
  width: 50%;
  height: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.button {
  width: 200rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin: 30rpx auto;
  text-align: center;
  line-height: 60rpx;
  background: #4cc9ac;
  color: #fff;
}