<view class="user page">
  <header title="IN成电"></header>
  <view class="bg"></view>
  <view class="hd">
    <image class="wave" src="/static/images/wave.png" mode="aspectFill"></image>
    <image class="wave wave-bg" src="/static/images/wave.png" mode="aspectFill"></image>
  </view>
  <view class="user-name">
    Hi，<open-data type="userNickName"></open-data>
  </view>
  <view class="user-info">
    <view class="user-info-content">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="user-status {{ isBound ? 'auth' : 'unauth' }}">
      {{ isBound ? '已认证' : '未认证' }}
    </view>
  </view>
  <view class="aboutme">
    <view class="item item-message">
      <navigator url="./message/main">
        <i class="icon iconfont icon-message"></i>
        <view class="item-name">我的消息</view>
      </navigator>
    </view>
    <view class="item item-issue">
      <navigator url="./issue/main">
        <i class="icon iconfont icon-issue"></i>
        <view class="item-name">我的发布</view>
      </navigator>
    </view>
    <view class="item item-profile">
      <navigator url="./profile/main">
        <i class="icon iconfont icon-profile"></i>
        <view class="item-name">我的简介</view>
      </navigator>
    </view>
  </view>
  <view class="navigator-group">
    <i-cell-group>
      <i-cell i-class="toauth" title="前往认证" is-link url="./login/main" link-type="navigateTo"></i-cell>
      <i-cell i-class="feedback" title="问题反馈" is-link url="./feedback/main" link-type="navigateTo"></i-cell>
      <i-cell i-class="aboutus" title="关于我们" is-link url="./aboutus/main" link-type="navigateTo"></i-cell>
    </i-cell-group>
  </view>
  <view class="share">
    <button open-type="share" class="share-btn">分享给同学吧</button>
    <i class="arrow"></i>
  </view>
</view>
<i-message id="message" />
<i-toast id="toast" />